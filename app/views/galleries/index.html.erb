<% @title = 'Galleries' %>

<h1>Galleries</h1>

<p>
	<% if signed_in? %>
		<%= link_to "Add a gallery", new_gallery_path %>
	<% end %>
<p>

<ul>
<% @galleries.each do |gallery| %>
	<li>
		<%= link_to gallery.name, gallery %> | 
		<%= gallery.description %>
		<% if signed_in? %>
			| <%= link_to "delete", gallery_path(gallery), method: :delete, confirm: "Are you sure ?" %>
		<% end %>
	</li>
<% end %>
</ul>
